{
  "name": "logre",
  "version": "1.1.20200324",
  "description": "a simple log reader for linux",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "standardx": "standardx --verbose | snazzy",
    "standardx-fix": "standardx --fix --verbose | snazzy",
    "pack": "build --dir",
    "dist": "build"
  },
  "repository": "https://github.com/yafp/logre",
  "bugs": {
    "url": "https://github.com/yafp/logre/issues"
  },
  "keywords": [
    "syslog",
    "log",
    "logreader",
    "linux",
    "reader",
    "filter"
  ],
  "author": "yafp  <fidel@yafp.de>",
  "license": "GPL-3.0",
  "build": {
    "productName": "logre",
    "appId": "logre",
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "freebsd",
        "pacman",
        "rpm",
        "Snap",
        "zip"
      ],
      "executableName": "logre",
      "icon": "app/img/icon/icon.png",
      "description": "a simple log reader for linux",
      "category": "System"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "about-window": "^1.13.2",
    "animate.css": "^3.7.2",
    "bootstrap": "^4.4.1",
    "custom-electron-titlebar": "^3.2.2-hotfix62",
    "datatables.net-buttons-dt": "^1.6.1",
    "datatables.net-colreorder-dt": "^1.5.2",
    "datatables.net-dt": "^1.10.20",
    "datatables.net-keytable-dt": "^2.5.1",
    "datatables.net-responsive-dt": "^2.2.3",
    "datatables.net-select-dt": "^1.3.1",
    "electron-log": "^4.1.0",
    "electron-unhandled": "^3.0.2",
    "electron-util": "^0.14.0",
    "journalctl": "^1.1.0",
    "jquery": "^3.5.0",
    "jszip": "^3.2.2",
    "noty": "^3.2.0-beta",
    "pdfmake": "^0.1.65",
    "popper.js": "^1.16.1",
    "simple-syslog-server": "^1.0.0",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "electron": "^8.1.1",
    "electron-builder": "^22.4.1",
    "snazzy": "^8.0.0",
    "standardx": "^5.0.0"
  },
  "standardx": {
    "ignore": [
      "/dist",
      "/docs/jsdocs",
      "/test/spec.js",
      "/app/js/select2",
      "/app/js/semver",
      "/app/js/DataTables"
    ]
  }
}
