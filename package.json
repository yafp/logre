{
  "name": "logre",
  "version": "1.1.20200316",
  "description": "A simple syslog reader",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "standardx": "standardx --verbose | snazzy",
    "standardx-fix": "standardx --fix --verbose | snazzy",
    "pack": "build --dir",
    "dist": "build"
  },
  "repository": "https://github.com/yafp/logre",
  "bugs": {
    "url": "https://github.com/yafp/logre/issues"
  },
  "keywords": [
    "syslog",
    "log",
    "logreader",
    "linux",
    "reader",
    "filter"
  ],
  "author": "yafp  <fidel@yafp.de>",
  "license": "GPL-3.0",
  "build": {
    "productName": "Logre",
    "appId": "logre",
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "Snap",
        "zip"
      ],
      "executableName": "logre",
      "icon": "app/img/icon/icon.png",
      "description": "A simple syslog reader",
      "category": "System"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.12.1",
    "about-window": "^1.13.2",
    "animate.css": "^3.7.2",
    "bootstrap": "^4.4.1",
    "custom-electron-titlebar": "^3.2.2-hotfix62",
    "electron-log": "^4.1.0",
    "journalctl": "^1.1.0",
    "jquery": "^3.4.1",
    "noty": "^3.2.0-beta",
    "popper.js": "^1.16.1",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "electron": "^8.1.1",
    "electron-builder": "^22.4.1",
    "snazzy": "^8.0.0",
    "standardx": "^5.0.0"
  },
  "standardx": {
    "ignore": [
      "/dist",
      "/docs/jsdocs",
      "/test/spec.js",
      "/app/js/datatables",
      "/app/js/select2",
      "/app/js/semver"
    ]
  }
}
